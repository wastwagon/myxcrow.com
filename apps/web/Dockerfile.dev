FROM node:20-alpine

RUN apk add --no-cache bash openssl python3 make g++ && npm i -g pnpm

WORKDIR /usr/src/app

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Allow build scripts for native modules
RUN echo "enable-pre-post-scripts=true" > .npmrc && \
    pnpm install --prefer-offline || pnpm install

# Copy application files
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["pnpm", "dev"]

