# API Environment Variables
# Copy this file and fill in your values
# Never commit .env files to git!

# Database (Auto-configured by Render)
DATABASE_URL=postgresql://user:password@host:5432/escrow

# Redis (Auto-configured by Render)
REDIS_URL=redis://host:6379

# Application
NODE_ENV=production
PORT=4000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL
WEB_APP_URL=https://myxcrow-web.onrender.com

# S3 Storage (AWS S3 or compatible)
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_BUCKET=escrow-evidence
S3_REGION=us-east-1

# Paystack
PAYSTACK_SECRET_KEY=sk_live_your_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_public_key

# Email (SMTP)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@myxcrow.com

# Frontend Environment Variables
NEXT_PUBLIC_API_BASE_URL=https://myxcrow-api.onrender.com/api
NEXT_PUBLIC_ENV=production
